<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgSecondary">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/alfaslabone"
            android:text="@string/profile"
            android:textColor="#2D2E4A"
            android:textSize="34sp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/name"
            android:fontFamily="@font/futura"
            android:textColor="@color/navy"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/futura"
            android:text="John Doe"
            android:textColor="@color/navy"
            android:textSize="35sp"
            android:textFontWeight="650"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/date_of_birth"
            android:fontFamily="@font/futura"
            android:textColor="@color/navy"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ageTv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/futura"
            android:text="19 / 02 / 2000"
            android:textColor="@color/navy"
            android:textSize="35sp"
            android:textFontWeight="650"/>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/futura"
            android:text="@string/your_goals"
            android:textColor="@color/navy"
            android:textSize="20sp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/weight"
                android:fontFamily="@font/futura"
                android:textColor="@color/navy"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/height"
                android:fontFamily="@font/futura"
                android:textColor="@color/navy"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>

        </TableRow>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/futura"
            android:text="@string/your_goals"
            android:textColor="@color/navy"
            android:textSize="20sp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/weightEt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura"
                android:text="60"
                android:textColor="@color/navy"
                android:textSize="35sp"
                android:textFontWeight="650"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/heightEt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura"
                android:text="150"
                android:textColor="@color/navy"
                android:textSize="35sp"
                android:textFontWeight="650"/>

        </TableRow>



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/your_bmi"
            android:fontFamily="@font/futura"
            android:textColor="@color/navy"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bmiTv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/futura"
            android:text="29"
            android:textColor="@color/navy"
            android:textSize="35sp"
            android:textFontWeight="650"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/target_weight"
            android:fontFamily="@font/futura"
            android:textColor="@color/navy"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/targetWeightEt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/futura"
            android:text="55"
            android:textColor="@color/navy"
            android:textSize="35sp"
            android:textFontWeight="650"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/orange_button"
            android:fontFamily="@font/lexend"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>
